<p class="h1 text-center mt-3 mb-4 pb-3 text-primary">
  <i class="fas fa-check-square me-1"></i>
  Todo List
</p>

<div id="tasks" style="background-color: #eff1f2">  

  <% @tasks.each do |task| %>

    <% if current_user %>
      <% if task.user_id == current_user.id %>
      <div class="field form-group" style="width:100%; border:1px; margin-bottom:10px">
        <h2 style="text-align: center;"><%= task.title %></h2>
      </div>

      <div class="field form-group" style="text-align: center;">
        <%= link_to "Show this task", task %>
      </div>

      <hr class="my-4">

      <% end %>
    <% end %>

  <% end %>
 
</div>

<%= link_to "New task", new_task_path, class:"btn btn-secondary" %>
        